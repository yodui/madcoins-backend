{
  "name": "madcoins-backend",
  "version": "1.0.0",
  "author": "Stephan Fedorov",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --ignore '*.cache.json' dist/index.js -mode restapi",
    "restapi": "nodemon --ignore '*.cache.json' dist/index.js -mode restapi -port 3000",
    "watcher": "nodemon --ignore '*.cache.json' dist/index.js -mode watcher -ex bitfinex poloniex -pairs ethusdt ethbtc"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "express": "^4.18.1",
    "pg": "^8.7.3",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "nodemon": "^2.0.16",
    "typescript": "^4.6.4"
  }
}
